<div id="comment_form">
  <h2>Добавить отзыв:</h2>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label t(:author) %><br />
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label t(:email) %><br />
      <%= f.text_field :email %><br />
      <span class="small">* <%= t(:email_warning) %></span>
    </p>
    <p>
      <%= f.label t(:city) %><br />
      <%= f.text_field :city %>
    </p>
    <p>
      <%= f.label t(:comment) %><br />
      <%= f.text_area :comment, rows: '5' %>
    </p>
    <p>
      <%= f.submit t(:comment_submit), class: 'btn' %>
    </p>
  <% end %>
</div>