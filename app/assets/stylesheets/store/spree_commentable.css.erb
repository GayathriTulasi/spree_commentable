.add_comments, .comment_list {
  border-bottom: 1px solid #d9d9db;
  clear: both;
}
.small_info input{
  width: 95%;
}
.small_info .commenter_name{
  float: left;
  width: 49%;
}
.small_info .commenter_email {
  float: right;
  width: 49%;
}
.comment_area {
  width: 98%;
}
input.comment {
  float: right;
}
ul.comments_list {
  clear: both;
  list-style: none;
}
div.comment_body {
  margin-left: 180px;
  padding: 5px 1em;
}
div.comment_date {
  float: left;
  width: 155px;

  padding: 5px 8px;
  text-align: right;
  font-size: 1.3em;
  line-height: 1.5em;
}
ul.comments_list li {
  clear: both;
  border-bottom: 1px solid #f1f1f1;
}
ul.comments_list li.even {
  background: #FAFAFA;
}
li.even .comment_body {
  border-left: 2px solid #ffffff;
}
li.odd .comment_body {
  border-left: 2px solid #FAFAFA;
}
.clear {
  clear: both;
}
span.author {
  font-weight: bolder;
  font-size: 1.3em;
}
.comment_body p {
  margin: 0;
}